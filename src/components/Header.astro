// Header Component
---

<header class="site-header">
  <div class="container">
    <div class="header-inner">
      <!-- ロゴ -->
      <a href="/" class="logo">
        <span class="logo-icon">{ }</span>
        <span class="logo-text">Code Bits</span>
      </a>

      <!-- ナビゲーション -->
      <nav class="main-nav" id="mainNav">
        <ul class="nav-list">
          <li class="nav-item"><a href="/" class="nav-link">Home</a></li>

          <!-- HTML&CSS ドロップダウン -->
          <li class="nav-item">
            <span class="nav-link has-dropdown">HTML&CSS</span>
            <ul class="dropdown-menu">
              <li><a href="/category/button" class="dropdown-item">Button</a></li>
              <li><a href="/category/card" class="dropdown-item">Card</a></li>
              <li><a href="/category/form" class="dropdown-item">Form</a></li>
              <li><a href="/category/loading" class="dropdown-item">Loading</a></li>
              <li><a href="/category/text" class="dropdown-item">Text</a></li>
            </ul>
          </li>

          <!-- JavaScript ドロップダウン -->
          <li class="nav-item">
            <span class="nav-link has-dropdown">JavaScript</span>
            <ul class="dropdown-menu">
              <li><a href="/category/animation" class="dropdown-item">Animation</a></li>
              <li><a href="/category/background" class="dropdown-item">Background</a></li>
            </ul>
          </li>
        </ul>
      </nav>

      <!-- モバイルメニューボタン -->
      <button class="menu-toggle" id="menuToggle" aria-label="メニューを開く">
        <span class="menu-toggle-bar"></span>
        <span class="menu-toggle-bar"></span>
        <span class="menu-toggle-bar"></span>
      </button>
    </div>
  </div>
</header>
