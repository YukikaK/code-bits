---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { articles } from '../data/articles';
---

<BaseLayout
  title="Code Bits - HTML/CSS/JS アニメーション・UI作品集"
  description="コピーして使えるHTML/CSS/JSのアニメーション・UIコンポーネント集。ローディング、ボタン、カードなど多数収録。"
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">
        <span class="hero-title-sub">コピーして使える</span>
        HTML/CSS/JS<br>アニメーション集
      </h1>
      <p class="hero-description">
        #001 から始まる作品番号で管理。<br>
        気に入ったコードをコピー or ダウンロードして使えます。
      </p>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="filter-section">
    <div class="container">
      <div class="filter-buttons">
        <button class="filter-btn is-active" data-filter="all">All</button>
        <button class="filter-btn" data-filter="animation">Animation</button>
        <button class="filter-btn" data-filter="button">Button</button>
        <button class="filter-btn" data-filter="card">Card</button>
        <button class="filter-btn" data-filter="form">Form</button>
        <button class="filter-btn" data-filter="loading">Loading</button>
        <button class="filter-btn" data-filter="text">Text</button>
        <button class="filter-btn" data-filter="background">Background</button>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="articles-section">
    <div class="container">
      <div class="articles-grid">
        {articles.map((article) => (
          <ArticleCard
            number={article.number}
            title={article.title}
            description={article.description}
            category={article.category}
            date={article.date}
            slug={article.slug}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
