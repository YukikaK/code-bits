      // 2秒後に元に戻す
      setTimeout(() => {
        button.classList.remove('is-copied');
        copyText.textContent = originalText;
      }, 2000);

    } catch (err) {
      console.error('コピーに失敗しました:', err);
      alert('コピーに失敗しました。手動でコピーしてください。');
    }
  });
});

